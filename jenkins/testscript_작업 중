pipeline {
    agent any

    stages {
        stage('Test Script Clone') {
            steps {
                echo 'Cloning...'
                bat "mkdir testapp"
                dir "testapp"{
                    git url: 'https://github.com/dnrwn/testscript_song.git', branch: 'master'
                }
            }
        }
    }
    post {
        always {
            echo 'This will always run'
        }
        success {
            echo 'Test Script Clone Succeeded.'
        }
        failure {
            echo 'Test Script Clone Failed.'
        }
    }
}
